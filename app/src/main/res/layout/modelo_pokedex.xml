<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:id="@+id/idImgFoto"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="#2c2c2c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/idTxtNome"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweatherblack"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:text="Nome" />

            <TextView
                android:id="@+id/idTxtPokedex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweatherblack"
                android:text="laaasuyuasyfytasf saitfytrdseyrs6yehgfa uytdsayysifdjf syysgdiaiuustiads kusgafiuosajklafs kuyfsa" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>